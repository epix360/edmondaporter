<% layout('/layouts/boilerplate') %>
    <div class="row">
        <% if(currentUser) { %>
            <div class="col text-end">
                <a class="btn btn-info" href="/blog/new">New Post</a>
            </div>
            <% } %>
    </div>
    <div class="row">
        <div class="col-lg-3 order-md-2">
            <%-include('../partials/blog-list.ejs')%>
        </div>
        <div class="col-lg-9 order-md-1">
            <% for (let blogPost of blogPosts) { %>
                <%-include('../partials/blog-article-summary.ejs', { blogPost: blogPost })%>
                    <% } %>
        </div>
    </div>
    <script src="/js/post-list-handler.js"></script>