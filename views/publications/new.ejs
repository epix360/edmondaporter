<% layout('/layouts/boilerplate') %>
    <h1>Publications</h1>
    <div class="row">
        <div class="col-6 offset-3">
            <label class="form-label" for="content">Create Publications List</label>
            <form action="/publications" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <input type="hidden" id="imageIds" name="publication[imageIds]">
                    <input type="hidden" id="imageIdsToDelete" name="publication[imageIdsToDelete]">
                    <input type="hidden" name="publication[content]" id="content">
                    <div id="editor-container"></div>
                </div>
                <div class="mb-3">
                    <button id="newPublicationFormSubmitBtn" type="submit" class="btn btn-success">Create Publication
                        List</button>
                </div>
                <a href="/publications">Cancel</a>
            </form>

        </div>
    </div>

    <script type="module" src="/js/editor-image-handler.js"></script>